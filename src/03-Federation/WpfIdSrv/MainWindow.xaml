<Window x:Class="WpfIdSrv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfIdSrv"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Stretch" Content="Call API" Margin="0,6,0,0" Click="CallApi" x:Name="CallApiButton" Cursor="Hand">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                </Style>
            </Button.Style>
        </Button>
        <ScrollViewer Grid.Row="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto">
            <TextBlock  x:Name="TbResut" Margin="0,6,0,0"/>
        </ScrollViewer>
    </Grid>
</Window>
